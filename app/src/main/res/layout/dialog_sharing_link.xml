<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:background="@color/entage_blue"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            android:layout_marginTop="10dp"
            android:text="@string/text_with_sharing_link"
            android:textColor="@color/entage_gray"
            android:textSize="16sp"
            android:textStyle="bold"/>


        <AutoCompleteTextView
            android:id="@+id/auto_complete_text"
            android:layout_width="match_parent"
            android:hint="@string/text_with_sharing_link_1"
            android:layout_height="wrap_content"
            android:theme="@style/searchListSpeci"
            android:ems="10"
            android:layout_marginTop="8dp"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="16sp"
            android:imeOptions="actionDone">
        </AutoCompleteTextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/error"
            android:visibility="gone"
            android:text="@string/text_with_sharing_link"
            android:textColor="@color/red"
            android:textSize="12sp"/>


        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/entage_blue_1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/ProgressBarColor"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                android:layout_alignTop="@+id/sharing"
                android:layout_alignBottom="@+id/sharing"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sharing"
                android:text="@string/sharing"
                android:gravity="center"
                android:visibility="visible"
                android:textSize="18sp"
                android:padding="10dp"
                android:background="@drawable/background_white_gray"
                android:textColor="@color/entage_blue"/>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>