<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="3dp"
    android:paddingStart="2dp"
    android:paddingEnd="2dp">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text"
        android:gravity="start"
        android:text=""
        android:paddingStart="1dp"
        android:paddingEnd="1dp"
        android:textSize="18dp"
        android:visibility="gone"
        android:background="@null"
        android:textColor="@color/black"
        android:theme="@style/editText"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container_relLayou"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/ic_default"
            android:scaleType="center"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/img_db"
            android:src="@drawable/ic_database"
            android:background="@color/entage_blue"
            android:tint="@color/white"
            android:layout_alignStart="@+id/imageView"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginStart="3dp"
            android:padding="5dp"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:id="@+id/delete_layout"
            android:gravity="center"
            android:visibility="gone"
            android:background="#66000000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/delete"
                android:layout_gravity="center"
                android:text="@string/delete"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textColor="@drawable/text_color_entage_red"
                android:background="@drawable/border_curve_red"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:visibility="visible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cancel"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/delete"
                android:text="@string/cancle"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:id="@+id/upload_layout"
            android:gravity="center"
            android:visibility="gone"
            android:background="#66000000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progress"
                android:layout_gravity="center"
                android:text="0%"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textColor="@drawable/text_color_entage_blue"
                android:background="@drawable/border_curve_entage_blue"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:visibility="visible"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>