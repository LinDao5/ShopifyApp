<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/advice_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_square_gray"
        android:padding="8dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/advice_title"
            android:textStyle="bold"
            android:text=""
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/advice_text"
            android:layout_below="@+id/advice_title"
            android:text=""
            android:textColor="@color/black"
            android:layout_marginTop="3dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/advice_oky"
            android:layout_below="@+id/advice_text"
            android:layout_alignParentEnd="true"
            android:text="حسناً"
            android:gravity="center"
            android:paddingTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/blue"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/advice_see_all"
            android:layout_below="@+id/advice_text"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="25dp"
            android:text="مشاهدة كل النصائح"
            android:textStyle="bold"
            android:textColor="@color/gray1"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="@color/gray"/>

</LinearLayout>