<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/appBarLayout"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:layoutDirection="rtl">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/HomeToolBar"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/to_next"
                    android:gravity="center"
                    android:paddingEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:background="@drawable/background_white_gray"
                    android:textColor="@color/entage_red"
                    android:id="@+id/toNext"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/save"
                    android:gravity="center"
                    android:paddingEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:textColor="@color/entage_blue"
                    android:id="@+id/save"/>

                <ProgressBar
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/progressBar"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:theme="@style/ProgressBarColor"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/titlePage"
                    android:layout_toEndOf="@+id/previous"
                    android:layout_marginEnd="5dp"
                    android:layout_centerVertical="true"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/black"/>


                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="match_parent"
                    android:id="@+id/close"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:tint="@color/black"
                    android:src="@drawable/ic_back_x"
                    android:visibility="gone"/>

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="match_parent"
                    android:id="@+id/saveButton"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:tint="@color/black"
                    android:src="@drawable/ic_check"
                    android:visibility="gone"/>

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="match_parent"
                    android:id="@+id/more_options"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:tint="@color/black"
                    android:src="@drawable/ic_more_vert"
                    android:visibility="gone"/>

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="match_parent"
                    android:id="@+id/orders"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingEnd="3dp"
                    android:paddingStart="3dp"
                    android:layout_marginEnd="10dp"
                    android:tint="#ffffff"
                    android:src="@drawable/ic_orders"
                    android:visibility="gone"/>

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="match_parent"
                    android:id="@+id/back"
                    android:layout_marginEnd="15dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:tint="@color/black"
                    android:src="@drawable/ic_back"
                    android:rotation="180"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/previous"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/entage_gray"
                    android:id="@+id/previous"
                    android:visibility="invisible"/>


            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


</merge>