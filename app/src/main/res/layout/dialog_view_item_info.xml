<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl">


    <View
        android:layout_width="wrap_content"
        android:layout_height="6dp"
        android:id="@+id/line"
        android:background="@color/entage_blue"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollview"
        android:layout_below="@+id/line"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout"
                android:orientation="vertical"
                android:padding="5dp">

                <!-- Options -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/container_options"
                    android:visibility="gone"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="@string/add_options_item"
                        android:layout_marginStart="3dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_marginBottom="5dp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/line0"
                    android:layout_marginTop="15dp"
                    android:visibility="gone"
                    android:background="@color/entage_blue_1"/>

                <!-- Specifications -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relLayout_specifications"
                    android:background="@drawable/selector_white_blue"
                    android:layout_marginTop="10dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="@string/add_specifications"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="3dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16dp"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/arrow1"
                        android:src="@drawable/ccp_down_arrow"
                        android:layout_alignParentEnd="true"
                        android:rotation="180"
                        android:layout_marginEnd="5dp"
                        android:layout_centerVertical="true"
                        android:tint="@color/entage_blue"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:id="@+id/container_specifications"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:orientation="vertical"
                        android:id="@+id/titles">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:orientation="vertical"
                        android:id="@+id/texts">

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/line1"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:background="@color/gray0"/>

                <!-- Description -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relLayout_description"
                    android:background="@drawable/selector_white_blue"
                    android:visibility="gone"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="@string/add_description"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_marginStart="3dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16dp"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/arrow2"
                        android:src="@drawable/ccp_down_arrow"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="5dp"
                        android:layout_centerVertical="true"
                        android:tint="@color/entage_blue"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:id="@+id/container_description">


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/line2"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray0"

                    android:visibility="gone"/>

                <!-- Shipping Information -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relLayout_shipping"
                    android:background="@drawable/selector_white_blue"
                    android:layout_marginTop="10dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:id="@+id/text_shipping"
                        android:text="@string/shipping_information"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_marginStart="3dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16dp"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/arrow3"
                        android:src="@drawable/ccp_down_arrow"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="5dp"
                        android:layout_centerVertical="true"
                        android:tint="@color/entage_blue"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:id="@+id/container_shipping">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="@string/area_shipping_availble"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="16dp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/line3"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:background="@color/gray0"/>

                <!-- Addresses Information -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relLayout_addresses"
                    android:background="@drawable/selector_white_blue"
                    android:layout_marginTop="10dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="@string/locations_receive_item"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_marginStart="3dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16dp"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/arrow4"
                        android:src="@drawable/ccp_down_arrow"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="5dp"
                        android:layout_centerVertical="true"
                        android:tint="@color/entage_blue"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:id="@+id/container_addresses">


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linLayout"
                android:orientation="horizontal"
                android:background="@color/white"
                android:weightSum="100"
                android:layout_below="@+id/linearLayout"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_to_basket"
                        android:id="@+id/add_to_basket"
                        android:layout_centerInParent="true"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        android:textColor="@color/entage_blue"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/take_me_to_basket"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingStart="9dp"
                        android:paddingEnd="9dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/border_curve_entage_blue"
                        android:gravity="center"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/text1"
                            android:text="@string/take_me_to_basket"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:textColor="@drawable/text_color_entage_blue"
                            android:textStyle="bold"
                            android:textSize="16dp" />

                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:id="@+id/image"
                            android:layout_marginStart="5dp"
                            android:layout_toEndOf="@+id/text1"
                            android:layout_centerVertical="true"
                            android:tint="@drawable/text_color_entage_blue"
                            android:src="@drawable/ic_basket"/>


                    </RelativeLayout>

                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/progressBar_addToBasket"
                        android:layout_centerInParent="true"
                        android:theme="@style/ProgressBarColor"
                        android:visibility="gone"
                        android:layout_alignTop="@+id/add_to_basket"
                        android:layout_alignBottom="@+id/add_to_basket"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:text="@string/cancle"
                    android:id="@+id/cancel"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>