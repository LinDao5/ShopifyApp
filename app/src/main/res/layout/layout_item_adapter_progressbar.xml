<?xml version="1.0" encoding="utf-8"?>

<io.supercharge.shimmerlayout.ShimmerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    android:background="@drawable/background_white_gray"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layoutDirection="rtl"
    android:padding="10dp"
    app:shimmer_auto_start="true"
    app:shimmer_color="@color/entage_blue_3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:id="@+id/relLayout"
        android:background="@drawable/border_curve_entage_blue_2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingStart="5dp"
            android:id="@+id/relLayou"
            android:background="@drawable/border_curve_side_top_entgae_blue_2_ops">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="@color/entage_blue_3"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:padding="5dp">

        </RelativeLayout>


    </LinearLayout>

</io.supercharge.shimmerlayout.ShimmerLayout>