<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/container"
                 android:padding="10dp"
                android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="5dp"
            android:id="@+id/relLayout"
            android:background="@color/entage_blue_1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text"
                android:text="@string/the_store"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/entagePageName"
                android:text=""
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/text"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:textSize="16dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/relLayout_send"
                android:layout_alignParentEnd="true"
                android:background="@drawable/border_curve_entage_blue">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/send_order"
                    android:layout_alignBottom="@+id/send_order"
                    android:layout_alignStart="@+id/send_order"
                    android:layout_alignEnd="@+id/send_order"
                    android:padding="4dp"
                    android:theme="@style/ProgressBarColor"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/send_order"
                    android:text="@string/continue_order"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:visibility="visible"
                    android:textColor="@drawable/text_color_entage_blue"
                    android:background="@drawable/border_curve_entage_blue"/>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/entage_blue_2"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text1"
                android:text="@string/the_count_items"
                android:layout_alignParentStart="true"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/countOrders"
                android:text="0"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/text1"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:textSize="14sp"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>