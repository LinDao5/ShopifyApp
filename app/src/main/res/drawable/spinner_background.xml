<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="0dp"
        android:top="-2dp"
        android:right="-2dp"
        android:left="-2dp">
        <shape>
            <corners android:radius="0dp" />
            <stroke
                android:width="1dp"
                android:color="@color/entage_blue" />
            <padding
                android:bottom="2dp" />
        </shape>
    </item>
    <item >
        <bitmap android:gravity="bottom|left"
            android:src="@drawable/ccp_down_arrow"
            android:tint="@color/entage_blue"/>
    </item>
</layer-list>